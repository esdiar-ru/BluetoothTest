<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/containerMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/command1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/command1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/command1"
        app:layout_constraintBottom_toTopOf="@id/connect"
        app:layout_constraintEnd_toStartOf="@id/command2"
        app:layout_constraintStart_toStartOf="parent"
         />
    <Button
        android:id="@+id/command2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/command2"
        app:layout_constraintBottom_toTopOf="@id/connect"
        app:layout_constraintEnd_toStartOf="@id/command3"
        app:layout_constraintStart_toEndOf="@id/command1"
        />
    <Button
        android:id="@+id/command3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/command3"
        app:layout_constraintBottom_toTopOf="@id/connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/command2"
        />
    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>